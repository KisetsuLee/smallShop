<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MyDB" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://172.16.14.195:3306/weiShop?characterEncoding=utf-8"
                        userId="root"
                        password="123456">
            <!--        <jdbcConnection driverClass="${my.mysql.driver}"-->
            <!--                        connectionURL="${my.mysql.url}"-->
            <!--                        userId="${my.mysql.username}"-->
            <!--                        password="${my.mysql.password}">-->
            <!--            <property name="nullCatalogMeansCurrent" value="true"/>-->
        </jdbcConnection>
        <javaModelGenerator targetPackage="com.lee.weichatmall.domain" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="db.mybatis" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.lee.weichatmall.dao.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="weiShop" tableName="user" domainObjectName="User">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>

        <table schema="weiShop" tableName="SHOP" domainObjectName="Shop">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>

        <table schema="weiShop" tableName="GOODS" domainObjectName="Goods">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>

        <table schema="weiShop" tableName="ORDER" domainObjectName="Order">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>

        <table schema="weiShop" tableName="SHOPPING_CART" domainObjectName="ShoppingCart">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>
